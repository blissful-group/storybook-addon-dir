{
  "name": "storybook-addon-dir",
  "version": "1.0.4",
  "description": "A simple addon for storybook to swap between LTR and RTL",
  "main": "dist/preset.js",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsup src/preset.ts src/manager.tsx --external ./manager",
    "release": "pnpm build && pnpm publish",
    "lint": "run-p lint:eslint lint:tsc",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc",
    "changeset": "changeset",
    "prepare": "husky install"
  },
  "keywords": [
    "storybook",
    "addons",
    "dir",
    "direction",
    "rtl"
  ],
  "author": {
    "name": "Blissful89",
    "email": "marcovanharten89@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@storybook/components": "^7.0.8",
    "@storybook/core-events": "^7.0.10",
    "@storybook/manager-api": "^7.0.8",
    "i18next": "^22.4.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@tsconfig/node18": "^2.0.0",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
